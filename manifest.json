{
    "name": "EWG Lookup",
    "version": "0.1.0",
    "description": "Lookup and save EWG product listings from any webpage. Select text and right-click to lookup products.",
    "author": "Annalise Mariottini",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://www.ewg.org/*",
        "https://www.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content-script.js"],
            "css" : ["content.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "EWG Product Lookup",
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [ "/images/*" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "icons": {
        "16": "ewg_logo_128.png",
        "48": "ewg_logo_48.png",
        "128": "ewg_logo_16.png"
    }
}